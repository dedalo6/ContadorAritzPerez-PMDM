<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/app_Title"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="59dp"
        android:layout_height="56dp"
        android:backgroundTint="@color/colorBotonGris"
        android:foreground="@android:drawable/ic_menu_revert"
        android:gravity="center"
        android:text="Reset"
        android:textColor="#00000000"
        android:textSize="20sp"
        android:visibility="visible"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.094" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="1dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle">

        <Button
            android:id="@+id/btnSuma"
            android:layout_width="128dp"
            android:layout_height="100dp"
            android:background="@drawable/botonmoradoestilo"
            android:gravity="center_horizontal|center_vertical"
            android:text="+"
            android:textColor="#ffffff"
            android:textSize="48sp" />
<!--        android:background="@drawable/botonmoradoestilo" El estilo esta definido en drawable -->
        <TextView
            android:id="@+id/textViewNumero"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#454545"
            android:textSize="60sp" />

        <Button
            android:id="@+id/btnResta"
            android:layout_width="41dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/botonmoradoestilo"
            android:gravity="center_horizontal|center_vertical"
            android:text="-"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="60sp" />
        <!--        android:background="@drawable/botonmoradoestilo" El estilo esta definido en drawable -->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>